  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "jsx": "react",
    "esModuleInterop": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}
